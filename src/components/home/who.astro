---
import { t, setDefaultNamespace } from "i18next";
import { Trans } from "astro-i18next/components";
import Svg from "@jasikpark/astro-svg-loader";

setDefaultNamespace("home");
---

<section class="bg-stone-100 p-3 lg:px-12 py-24 lg:py-48 relative w-full">
  <div class="container flex-none lg:flex">
    <div class="w-full lg:w-1/2 p-1 lg;p-12">
      <h2 class="text-center lg:text-left">
        <a href="#" class="uppercase text-slate-600 hover:text-secondary"
          >{t("who.subheader.web-design")}</a
        >
        <span class="text-xl text-primary mx-3">.</span>
        <a href="#" class="uppercase text-slate-600 hover:text-secondary"
          >{t("who.subheader.mobile")}</a
        >
        <span class="text-xl text-primary mx-3">.</span>
        <a href="#" class="uppercase text-slate-600 hover:text-secondary"
          >{t("who.subheader.seo")}</a
        >
      </h2>
      <h1
        class="text-2xl lg:text-4xl font-bold uppercase my-5 text-center lg:text-left text-transparent bg-clip-text bg-[radial-gradient(ellipse_at_left,_var(--tw-gradient-stops))] from-orange-500 via-pink-500 to-orange-500"
      >
        <!--  <h1
        class="text-2xl lg:text-4xl font-bold uppercase my-5 text-center lg:text-left text-transparent bg-clip-text bg-[conic-gradient(at_top_left,_var(--tw-gradient-stops))] from-orange-300 via-slate-300 to-orange-900"
      > -->
        <Trans i18nKey="who.header">
          You have bright <span>ideas</span> ! We bring them to <span>life</span
          > !
        </Trans>
      </h1>
      <p class="text-lg text-slate-600 text-center lg:text-left">
        {t("who.content")}
      </p>
      <div class="lg:flex-none justify-center lg:justify-start flex">
        <a href="#" class="btn btn-primary my-5"
          >{t("navigation:header.let-talk")}</a
        >
      </div>
    </div>
    <div class="w-1/2 self-center">
      <Svg src={import("../svgs/ideas.svg?raw")} />
    </div>
  </div>
</section>
