---
import Svg from "@jasikpark/astro-svg-loader";
---

<footer class="px-0 py-12 md:px-12 md:py-12 bg-cyan-900">
  <div class="container px-4 md:px-24">
    <footer class="footer p-10">
      <div>
        <Svg
          src={import("../../components/svgs/logo-icon.svg?raw")}
          class="h-12 w-12"
        />
        <p class="text-slate-50 py-2">
          <span class="text-2xl uppercase font-['ElyzabethPro-Bold']"
            >EruLabs</span
          ><br /><span class="block mt-2">Better ideas faster</span>
        </p>
      </div>
      <section class="w-full grid grid-cols-2 md:grid-cols-3 gap-8">
        <div class="flex flex-col">
          <span class="footer-title text-cyan-300 mb-4 block">Services</span>
          <a class="link text-slate-50 link-hover leading-loose">Branding</a>
          <a class="link text-slate-50 link-hover leading-loose">Design</a>
          <a class="link text-slate-50 link-hover leading-loose">Marketing</a>
          <a class="link text-slate-50 link-hover leading-loose"
            >Advertisement</a
          >
        </div>
        <div class="flex flex-col">
          <span class="footer-title text-cyan-300 mb-4 block">Company</span>
          <a class="link link-hover text-slate-50 leading-loose">About us</a>
          <a class="link link-hover text-slate-50 leading-loose">Contact</a>
          <a class="link link-hover text-slate-50 leading-loose">Jobs</a>
          <a class="link link-hover text-slate-50 leading-loose">Press kit</a>
        </div>
        <div class="flex flex-col">
          <span class="footer-title text-cyan-300 mb-4 block">Legal</span>
          <a class="link link-hover text-slate-50 leading-loose">Terms of use</a
          >
          <a class="link link-hover text-slate-50 leading-loose"
            >Privacy policy</a
          >
          <a class="link link-hover text-slate-50 leading-loose"
            >Cookie policy</a
          >
        </div>
      </section>
    </footer>
  </div>
</footer>
