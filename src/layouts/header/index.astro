---
import { language, t, setDefaultNamespace } from "i18next";
setDefaultNamespace("navigation");

const { appName } = Astro.props;
---

<!-- TODO set background on scroll -->
<div class="navbar bg-transparent sticky top-0 lg:px-20 z-50">
  <div class="flex-1 items-center">
    <div class="block sm:hidden">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h7"></path></svg
          >
        </label>
        <ul
          tabindex="0"
          class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52"
        >
          <li><a>Homepage</a></li>
          <li><a>Portfolio</a></li>
          <li><a>About</a></li>
        </ul>
      </div>
    </div>
    <a
      class="btn btn-ghost flex-1 pt-1 sm:flex-none text-2xl uppercase font-ElyzabethPro-Bold align-middle"
    >
      {appName}</a
    >
    <div class="sm:hidden">
      <a href="/contact-us" class="btn btn-primary self-end sm:hidden"
        >{t("header.let-talk")}</a
      >
    </div>
  </div>
  <div class="hidden flex-none sm:block">
    <ul class="menu menu-horizontal px-1">
      <li class="uppercase"><a>{t("header.home")}</a></li>
      <li tabindex="0">
        <a class="uppercase">
          {t("header.services")}
          <svg
            class="fill-current"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            ><path
              d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
            ></path></svg
          >
        </a>
        <ul class="p-2 bg-base-100">
          <li><a href="/services/seo">{t("header.seo")}</a></li>
          <li>
            <a href="/services/web-development" class="uppercase"
              >{t("header.web-development")}</a
            >
          </li>
        </ul>
      </li>
      <li><a class="uppercase">{t("header.portfolio")}</a></li>
      <li>
        <a class="uppercase" href="/contact-us">{t("header.contact-us")}</a>
      </li>
      <li>
        <a href=`https://blog.erulabs.tech/ ${language}` class="uppercase"
          >{t("header.blog")}</a
        >
      </li>
      <li class="mx-5">
        <a href="/contact-us" class="btn btn-primary">{t("header.let-talk")}</a>
      </li>
    </ul>
  </div>
</div>
